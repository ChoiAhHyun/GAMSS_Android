<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0e0e0e"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_thisweek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30.7sp"
        android:textColor="@color/color_ffffff"
        android:text="이번주 영화"
        android:layout_marginTop="75.3dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vp_movie"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_movie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="33.3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_thisweek"
        app:layout_constraintBottom_toTopOf="@+id/tv_nextmovie"
        app:layout_constraintHeight_percent="0.6"/>

    <TextView
        android:id="@+id/tv_nextmovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30.7sp"
        android:textColor="@color/color_ffffff"
        android:text="다음 영화를\n투표해주세요!"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/vp_movie"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>